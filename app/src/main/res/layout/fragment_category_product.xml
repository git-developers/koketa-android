<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/dim_15"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginBottom="@dimen/dim_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dim_10"
            android:tint="@color/slider_3"
            android:src="@drawable/ic_view_quilt_black_24dp" />

        <TextView
            android:id="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/livvic_bold"
            android:gravity="center_vertical"
            android:ellipsize="none"
            android:maxLines="2"
            android:text="KOKETA B SILUET OI18 CHALECO LATEX L NEGRO"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tl_table"
        android:layout_below="@+id/ll_header"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            style="@style/tableHeader">
            <TextView
                android:id="@+id/tv_header_1"
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView"
                android:text=""/>
            <TextView
                android:id="@+id/tv_header_2"
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView"
                android:text="S"/>
            <TextView
                android:id="@+id/tv_header_3"
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView"
                android:text="M"/>
            <TextView
                android:id="@+id/tv_header_4"
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView"
                android:text="L"/>
            <TextView
                android:id="@+id/tv_header_5"
                style="@style/tableHeaderFooterTextView"
                android:text="XL"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_stock_1"
            style="@style/tableOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_resumen_1"
                style="@style/tableRowTextView"
                android:text="Beige"/>
            <EditText
                android:id="@+id/tv_resumen_2"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
            <EditText
                android:id="@+id/tv_resumen_3"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
            <EditText
                android:id="@+id/tv_resumen_4"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
            <EditText
                android:id="@+id/tv_resumen_5"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_stock_2"
            style="@style/tableOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_resumen_21"
                style="@style/tableRowTextView"
                android:text="Negro"/>
            <EditText
                android:id="@+id/tv_resumen_22"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
            <EditText
                android:id="@+id/tv_resumen_23"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
            <EditText
                android:id="@+id/tv_resumen_24"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
            <EditText
                android:id="@+id/tv_resumen_25"
                style="@style/tableRowTextView"
                android:inputType="number"
                android:text="0"/>
        </TableRow>


        <TableRow
            style="@style/tableFooter">
            <TextView
                android:id="@+id/tv_total_1"
                android:drawablePadding="5dp"
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView"
                android:text=""/>
            <TextView
                android:id="@+id/tv_total_2"
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView"
                android:text=""/>
            <TextView
                android:id="@+id/tv_total_3"
                android:text=""
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView" />
            <TextView
                android:id="@+id/tv_total_4"
                android:text=""
                android:background="@drawable/right_line_3"
                style="@style/tableHeaderFooterTextView" />
            <TextView
                android:text=""
                style="@style/tableHeaderFooterTextView" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_add"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/success"
        android:layout_below="@+id/tl_table"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginBottom="@dimen/dim_20"
        android:layout_marginLeft="@dimen/dim_30"
        android:layout_marginRight="@dimen/dim_30"
        android:padding="10dp"
        android:text="Agregar"
        android:textSize="18dp" />

</RelativeLayout>







